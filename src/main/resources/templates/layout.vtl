<!DOCTYPE html>
<html>
  <head>
    <title>sonar</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/app.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="/js/scripts.js"></script>
  </head>
  <body>

    <!-- begin inner template-->
    <div class="container">
      <div class="jumbotron">
        <h1>Sonar</h1>
      </div>
        <nav class="navbar navbar-default">
          <!-- <div class="container"> -->
            <div class="row">
              <div class="col-md-10">
                <button type="button" class="btn btn-outline-success"><a href="/gamers/$gamer.getId()/new-event">New Event</a></button>
              </div>
              <div class="credentials">
                #if ($gamer.getName())
                  <div class="col-md-2">
                    <p>You are logged in as $gamer.getName()</p>
                  </div>
                #else
                  <div class="col-md-1">
                    <button type="button" class="btn btn-outline-success"><a href="/login">Log In</a></button>
                  </div>
                  <div class="col-md-1">
                    <button type="button" class="btn btn-outline-success"><a href="/signup">Sign Up</a></button>
                  </div>
                #end
              </div>
            </div>
          <!-- </div> -->
        </nav>

      #parse( $template )
    </div>
    <!-- end inner template-->
  </body>
</html>
